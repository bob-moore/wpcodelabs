{% if post.author.description %}

	<aside id="cl_author" class="cl-author-box">

		<div class="container">

			<div class="author-image">

				<img src="{{ post.author.avatar({ size: 125 }) }}" alt="{{post.author.name}}" width="125px" height="125px" />

			</div>

			<div class="author-info">

				<header class="author-header">

					<h4>About the Author : <a href="{{post.author.link}}" class="author-archive-link">{{post.author.name}}</a></h4>

				</header>

				<div class="author-body">

					{{ post.author.description|shortcodes|wpautop }}

				</div>

				{% if post.author.links %}

					<ul class="author-social-links">

						{% for network, link in post.author.links %}

							<li class="author-{{network}}"><a href="{{link.url}}" target='_blank'><span class="social-icon {{link.icon}}"></span><span class="screen-reader-text">{{network}}</span></a></li>

						{% endfor %}

					</ul>

				{% endif %}

			</div>

		</div>

	</aside>

{% endif %}
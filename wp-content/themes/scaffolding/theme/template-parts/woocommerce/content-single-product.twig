{{ wp.do_action( 'woocommerce_before_single_product' ) }}

{% if wp.post_password_required %}

	{{ wp.get_the_password_form }}

{% else %}

	<div id="product-{{product.ID}}" class="{{woocommerce.get_product_class( '', product )|join(' ')}}">

		<div class="product-summery">

			{% if wp.has_action( 'woocommerce_before_single_product_summary' ) %}

				<div class="column entry-images">

					{{ wp.do_action( 'woocommerce_before_single_product_summary' ) }}

				</div>

			{% endif %}

			{% if wp.has_action( 'woocommerce_single_product_summary' ) %}

				<div class="column summary entry-summary">

					{{ wp.do_action( 'woocommerce_single_product_summary' ) }}

				</div>

			{% endif %}

		</div>

		{{ wp.do_action( 'woocommerce_after_single_product_summary' ) }}

	</div>

	{{ wp.do_action( 'woocommerce_after_single_product' ) }}

{% endif %}
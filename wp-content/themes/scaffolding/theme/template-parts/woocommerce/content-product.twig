{% if product and product.is_visible %}

	<li class="product {{product.class}}">

		<div class="product-header">

			{{ wp.do_action( 'woocommerce_before_shop_loop_item' ) }}

			{{ wp.do_action( 'woocommerce_before_shop_loop_item_title' ) }}

		</div>

		<div class="product-body">

			{{ wp.do_action( 'woocommerce_shop_loop_item_title' ) }}

			{{ wp.do_action( 'woocommerce_after_shop_loop_item_title' ) }}

		</div>

		<div class="product-footer">

			{{ wp.do_action( 'woocommerce_after_shop_loop_item' ) }}

		</div>

	</li>

{% endif %}